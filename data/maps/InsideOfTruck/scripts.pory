	case 0, LittlerootTown_BrendansHouse_1F_EventScript_Kanto
	case 1, LittlerootTown_BrendansHouse_1F_EventScript_Johto
	case 2, LittlerootTown_BrendansHouse_1F_EventScript_Hoenn
